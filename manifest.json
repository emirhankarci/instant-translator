{
  "manifest_version": 3,
  "name": "Inline Translator",
  "version": "1.0.0",
  "description": "Instantly translate selected text directly on the page",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
